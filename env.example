# Configuración de puertos
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443
CADDY_ADMIN_PORT=2019

# Configuración de red
NETWORK_SUBNET=172.20.0.0/16
NETWORK_GATEWAY=172.20.0.1

# Configuración de dominios
BASE_DOMAIN=local.dev
WILDCARD_DOMAIN=*.local.dev

# Configuración de certificados
CERT_CA_VALIDITY_DAYS=3650
CERT_WILDCARD_VALIDITY_DAYS=365
CERT_KEY_SIZE=4096
CERT_WILDCARD_KEY_SIZE=2048

# Configuración de logs
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily

# Configuración de monitoreo
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Configuración de aplicaciones externas
EXTERNAL_APPS_ENABLED=true
MAX_EXTERNAL_APPS=50
AUTO_DISCOVERY_ENABLED=true
DISCOVERY_INTERVAL=300

# Configuración de DNS
DNS_AUTO_SETUP=true
DNS_BASE_DOMAIN=local.dev
DNS_WILDCARD_ENABLED=true
